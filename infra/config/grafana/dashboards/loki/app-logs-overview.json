{
  "id": null,
  "uid": "app-logs-overview",
  "title": "App Logs Overview",
  "tags": ["logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Gateway Logs (Last 1h)",
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 0 },
      "options": {
        "showTime": true,
        "showLabels": true,
        "dedupStrategy": "none",
        "wrapLogMessage": true
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki-logs" },
          "expr": "{app=\"$app\"}",
          "queryType": "range",
          "maxLines": 1000
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Log Volume by Level",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "drawStyle": "line", "lineWidth": 1 }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "loki", "uid": "loki-logs" },
          "expr": "sum by (level) (count_over_time({app=\"$app\"} |= `` [$__interval]))",
          "queryType": "range"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "app",
        "label": "App",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki-logs" },
        "definition": "label_values({app!=\"\"}, app)",
        "refresh": 2,
        "query": {
          "query": "label_values({app!=\"\"}, app)",
          "refId": "StandardVariableQuery"
        },
        "multi": false,
        "includeAll": false,
        "current": {
          "selected": true,
          "text": "gateway",
          "value": "gateway"
        }
      }
    ]
  }
}
